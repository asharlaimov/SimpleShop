<h1>Listing users</h1>
<%= render_notice %>

<table class="SimpleTable">
  <thead>
  <tr>
    <th>Name</th>
    <th>Action</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td><%= user.name %></td>
        <td class="actions">
          <%= link_to 'Show', user %>
          <%= link_to 'Edit', edit_user_path(user) %>
          <%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<p><%= paginate @users %></p>

<%= link_to 'New User', new_user_path %>
